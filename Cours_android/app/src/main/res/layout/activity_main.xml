<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/FirstImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/cat"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="90dp" />

    <Button android:id="@+id/mybutton1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Change style"
        android:onClick="buttonClick1"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="350dp"/>

    <Button android:id="@+id/mybutton2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Replay sound"
        android:onClick="buttonClick1"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="450dp"/>

    <Button android:id="@+id/mybutton3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="next page"
        android:onClick="buttonClick1"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="550dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
